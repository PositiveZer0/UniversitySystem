@using UniversitySystem.Models.Speciality
@model List<SpecialityViewModel>
@{
    ViewData["Title"] = "Specialities";
    int counter = 0;
}

<table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Име на специалността</th>
      <th scope="col">Име на университета</th>
      <th scope="col">Минимален бал</th>
    </tr>
  </thead>
    <tbody>
        @foreach (var speciality in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@speciality.Name</td>
                <td>@speciality.UniversityName</td>
                <td>@speciality.MinimumScore</td>
            </tr>
        }
    </tbody>
</table>