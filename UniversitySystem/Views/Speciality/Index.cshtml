@using UniversitySystem.Models.Speciality
@model SpecialityListViewModel
@{
    ViewData["Title"] = "Specialities";
    int pageCount = 20;
    int counter = (Model.PageNumber - 1) * pageCount;
}
<h1>@Model.PageNumber</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Име на специалността</th>
            <th scope="col">Име на университета</th>
            <th scope="col">Минимален бал</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var speciality in Model.Specialities)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@speciality.Name</td>
                <td>@speciality.UniversityName</td>
                <td>@speciality.MinimumScore</td>
            </tr>
        }
    </tbody>
</table>

<hr />
<nav aria-label="...">
    <ul class="pagination">

        <!--previous button-->
        <li class="page-item @if(!Model.HasPrevious){<text>disabled</text>}">
            <a class="page-link " asp-controller="Speciality" asp-action="Index" asp-route-id="@Model.PreviousPage">Previous</a>
        </li>
            
        @if (Model.HasPrevious)
        {
            <!--previous page number-->
            <li class="page-item"><a class="page-link" asp-controller="Speciality" asp-action="Index" asp-route-id="@Model.PreviousPage">@Model.PreviousPage</a></li>
        }

        <!--current page number-->
        <li class="page-item active">
            <a class="page-link" asp-controller="Speciality" asp-action="Index" asp-route-id="@Model.PageNumber">@Model.PageNumber <span class="sr-only">@Model.PageNumber </span></a>
        </li>

        @if (Model.HasNext)
        {
            <!--next page number-->
            <li class="page-item"><a class="page-link" asp-controller="Speciality" asp-action="Index" asp-route-id="@Model.NextPage">@Model.NextPage</a></li>
        }
        <!--next button-->
        <li class="page-item @if(!Model.HasNext){<text>disabled</text>}">
            <a class="page-link " asp-controller="Speciality" asp-action="Index" asp-route-id="@Model.NextPage">Next</a>
        </li>
    </ul>
</nav>

